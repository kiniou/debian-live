#!/bin/sh

set -e

_MIRROR="http://httpredir.debian.org/debian"
# _MIRROR="http://gateway:3142/debian/"
git clean -fX
lb config noauto \
	 --clean \
   --ignore-system-defaults \
   --distribution sid \
   --mode debian \
   --debian-installer live \
   --debian-installer-distribution daily \
   --linux-packages "linux-image linux-headers" \
   --firmware-binary false \
   --firmware-chroot false \
   --source false \
   --mirror-bootstrap "${_MIRROR}" \
   --mirror-binary "${_MIRROR}" \
   --archive-areas "main contrib non-free" \
   --binary-images iso \
   --bootloaders grub-efi \
   --bootappend-live "boot=live config keyboard-layouts=fr" \
   --bootappend-install "keyboard-layouts=fr" \
   --loadlin false \
   --win32-loader false \
   --uefi-secure-boot disable \
"${@}"

